{
    "manifest_version": 3,
    "name": "Pixiv Image Downloader",
    "version": "1.0",
    "description": "Download Pixiv images with one click.",
    "permissions": [
        "downloads",
        "storage"
    ],
    "host_permissions": [
        "*://*.pixiv.net/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.pixiv.net/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "action": {
        "default_title": "Pixiv Downloader Settings",
        "default_popup": "options.html"
    }
}